{
  "format": "page",
  "id": "blog_post",
  "label": "Blog Post",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID"
        }
      },
      "category": {
        "type": "StructuredText",
        "config": {
          "label": "Category",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "strong,em,hyperlink"
        }
      },
      "publication_date": {
        "type": "Date",
        "config": {
          "label": "Publication Date",
          "placeholder": ""
        }
      },
      "blog_article_heading": {
        "type": "StructuredText",
        "config": {
          "label": "Blog Article Heading",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "heading1,strong,em"
        }
      },
      "article_main_image": {
        "type": "Image",
        "config": {
          "label": "Article Main Image",
          "constraint": {},
          "thumbnails": []
        }
      },
      "main_article_content": {
        "type": "StructuredText",
        "config": {
          "label": "Main Article Content",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      },
      "author_info": {
        "type": "Link",
        "config": {
          "label": "Author info",
          "select": "document",
          "repeat": false,
          "customtypes": [
            {
              "id": "author",
              "fields": [
                "author_name",
                "author_image",
                "author_bio",
                {
                  "id": "social_media",
                  "fields": ["social_link"]
                }
              ]
            }
          ]
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "Faq": {
              "type": "SharedSlice"
            }
          }
        }
      }
    },
    "SEO & Metadata": {
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      },
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "constraint": {
            "height": 1260,
            "width": 2400
          },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      },
      "meta_image_alt_text": {
        "type": "Text",
        "config": {
          "label": "Meta Image Alt Text",
          "placeholder": ""
        }
      },
      "meta_keywords": {
        "type": "Group",
        "config": {
          "label": "Meta Keywords",
          "repeat": true,
          "fields": {
            "meta_keywords_text": {
              "type": "Text",
              "config": {
                "label": "Meta Keywords Text",
                "placeholder": ""
              }
            }
          }
        }
      },
      "meta_url": {
        "type": "Text",
        "config": {
          "label": "Meta URL",
          "placeholder": ""
        }
      }
    }
  }
}
