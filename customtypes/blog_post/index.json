{
  "format": "page",
  "id": "blog_post",
  "label": "Blog Post",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID"
        }
      },
      "category": {
        "type": "StructuredText",
        "config": {
          "label": "Category",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "strong,em,hyperlink"
        }
      },
      "publication_date": {
        "type": "Date",
        "config": {
          "label": "Publication Date",
          "placeholder": ""
        }
      },
      "blog_article_heading": {
        "type": "StructuredText",
        "config": {
          "label": "Blog Article Heading",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "heading1,strong,em"
        }
      },
      "author_image": {
        "type": "Image",
        "config": {
          "label": "Author Image",
          "constraint": {},
          "thumbnails": []
        }
      },
      "author_name": {
        "type": "StructuredText",
        "config": {
          "label": "Author Name",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "strong,em,paragraph"
        }
      },
      "article_main_image": {
        "type": "Image",
        "config": {
          "label": "Article Main Image",
          "constraint": {},
          "thumbnails": []
        }
      },
      "icons": {
        "type": "Group",
        "config": {
          "label": "Icons",
          "repeat": true,
          "fields": {
            "icon_text": {
              "type": "Text",
              "config": {
                "label": "Icon Text",
                "placeholder": ""
              }
            },
            "icon_link": {
              "type": "Link",
              "config": {
                "label": "Icon Link",
                "placeholder": "",
                "select": null,
                "allowTargetBlank": true,
                "allowText": true,
                "repeat": false
              }
            }
          }
        }
      },
      "main_article_content": {
        "type": "StructuredText",
        "config": {
          "label": "Main Article Content",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      },
      "more_about_author_text": {
        "type": "Text",
        "config": {
          "label": "More About Author Text",
          "placeholder": ""
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "Faq": {
              "type": "SharedSlice"
            }
          }
        }
      }
    },
    "SEO & Metadata": {
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      },
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "constraint": {
            "height": 1260,
            "width": 2400
          },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      }
    }
  }
}
