{
  "format": "page",
  "id": "blog_home_page",
  "label": "Blog Home Page",
  "repeatable": false,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "uid",
          "placeholder": ""
        }
      },
      "heading": {
        "type": "StructuredText",
        "config": {
          "label": "Heading",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "heading1,strong,em"
        }
      },
      "filter_by_tag_text": {
        "type": "StructuredText",
        "config": {
          "label": "Filter By Tag Text",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "heading2,heading3,paragraph,heading4,heading6,heading5,em,strong"
        }
      },
      "tags": {
        "type": "Group",
        "config": {
          "label": "Tags",
          "repeat": true,
          "fields": {
            "tag_text": {
              "type": "StructuredText",
              "config": {
                "label": "Tag Text",
                "placeholder": "",
                "allowTargetBlank": true,
                "multi": "paragraph,strong,em"
              }
            }
          }
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "blog_article_card": {
              "type": "SharedSlice"
            }
          }
        }
      }
    },
    "SEO & Metadata": {
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      },
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "constraint": {
            "height": 1260,
            "width": 2400
          },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      }
    }
  }
}
